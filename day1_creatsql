CREATE TABLE urunler(
urun_id  NUMBER,
urun_adi VARCHAR(50),
Fiyat NUMBER

);

INSERT INTO urunler VALUES (100,'cips',5);
INSERT INTO urunler VALUES (200,'kola',6);

SELECT * FROM urunler;

